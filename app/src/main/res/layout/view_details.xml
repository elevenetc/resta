<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
       tools:parentTag="android.widget.FrameLayout"
       android:background="@drawable/details_background">

    <View android:layout_width="match_parent"
          android:id="@+id/fullScreenBackground"
          android:background="@color/colorPrimaryDark"
          android:layout_height="match_parent"/>

    <LinearLayout
            android:paddingStart="@dimen/details_padding"
            android:paddingEnd="@dimen/details_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_sheet_height">

            <TextView
                    android:id="@+id/textName"
                    tools:text="@tools:sample/lorem"
                    android:textColor="@color/colorAccent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnMore"
                    android:textColor="@color/colorAccent"
                    android:text="@string/details_btn_more"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/btnClose"
                    android:text="@string/details_btn_close"
                    android:textColor="@color/colorAccent"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="@string/details_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textAddress"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="@tools:sample/lorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="@string/details_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textCategory"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="@tools:sample/lorem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</merge>