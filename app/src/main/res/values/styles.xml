<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

    </style>

    <style name="BaseBottomSheet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_height</item>
        <item name="android:layout_marginStart">@dimen/bottom_sheet_side_margin</item>
        <item name="android:layout_marginEnd">@dimen/bottom_sheet_side_margin</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:elevation">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:background">@drawable/details_background</item>
    </style>

    <style name="BaseBottomSheetDouble" parent="BaseBottomSheet">
        <item name="android:layout_height">@dimen/bottom_sheet_double_height</item>
    </style>

</resources>
